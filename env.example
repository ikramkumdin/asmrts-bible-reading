# ASMR Bible Reading App Configuration
# Copy this file to .env.local and fill in your actual values

# Firebase Configuration (Required for Authentication)
NEXT_PUBLIC_FIREBASE_API_KEY=your_firebase_api_key_here
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your_project_id.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your_project_id_here
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your_project_id.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_messaging_sender_id_here
NEXT_PUBLIC_FIREBASE_APP_ID=your_firebase_app_id_here
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID=your_measurement_id_here
NEXT_PUBLIC_GA_TRACKING_ID=your_ga_tracking_id_here

# Backend API Configuration
NEXT_PUBLIC_BACKEND_URL=https://asmrtts-website.vercel.app
# For local development, use: http://localhost:8000

# ElevenLabs API Configuration
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here

# OpenAI API Configuration (Alternative TTS provider)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_ORGANIZATION=your_openai_org_id_here

# Google Cloud Platform Configuration
GCP_PROJECT_ID=your_gcp_project_id
GCP_BUCKET_NAME=your_gcp_bucket_name
GCP_REGION=us-central1
GCP_CREDENTIALS={"type":"service_account","project_id":"...","private_key_id":"...","private_key":"...","client_email":"...","client_id":"...","auth_uri":"https://accounts.google.com/o/oauth2/auth","token_uri":"https://oauth2.googleapis.com/token","auth_provider_x509_cert_url":"https://www.googleapis.com/oauth2/v1/certs","client_x509_cert_url":"..."}

# Azure Speech Services (Alternative TTS provider)
AZURE_SPEECH_KEY=your_azure_speech_key_here
AZURE_SPEECH_REGION=your_azure_region_here

# AWS Polly (Alternative TTS provider)
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_REGION=us-east-1

# Quality Check Configuration
QUALITY_CHECK_ENABLED=true
SPEECH_RECOGNITION_PROVIDER=openai # openai, google, azure, aws
MIN_QUALITY_SCORE=0.7
AUTO_RETRY_FAILED_GENERATIONS=true
MAX_RETRY_ATTEMPTS=3

# Batch Processing Configuration
MAX_BATCH_SIZE=50
BATCH_PROCESSING_DELAY=1000 # milliseconds
MAX_CONCURRENT_BATCHES=5

# File Upload Configuration
MAX_FILE_SIZE_MB=10
ALLOWED_FILE_TYPES=txt,pdf,docx,html,json,xml
UPLOAD_FOLDER=uploads

# Audio Generation Limits
MAX_TEXT_LENGTH_STANDARD=5000
MAX_TEXT_LENGTH_HIGH=10000
MAX_TEXT_LENGTH_ULTRA=15000

# Storage Configuration
AUDIO_STORAGE_FOLDER=audio-content
TEMP_STORAGE_FOLDER=temp
CLEANUP_TEMP_FILES=true
TEMP_FILE_RETENTION_HOURS=24

# Logging Configuration
LOG_LEVEL=info # debug, info, warn, error
ENABLE_AUDIO_GENERATION_LOGS=true
ENABLE_QUALITY_CHECK_LOGS=true

# Development Configuration
NODE_ENV=development
ENABLE_MOCK_TTS=false
ENABLE_MOCK_QUALITY_CHECK=false

# Email Service Configuration
# Choose one of the following options:

# Option 1: Resend (Recommended - Free tier available)
RESEND_API_KEY=your_resend_api_key_here

# Option 2: SendGrid
SENDGRID_API_KEY=your_sendgrid_api_key_here

# Option 3: SMTP (Gmail, Outlook, etc.)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=ekram.kumdin@asmrtts.com
SMTP_PASS=a k p p o j d k v j o z z m b d
SMTP_FROM=noreply@asmraudiobible.com

# Option 4: EmailJS (Client-side only)
NEXT_PUBLIC_EMAILJS_SERVICE_ID=your_service_id
NEXT_PUBLIC_EMAILJS_TEMPLATE_ID=your_template_id
NEXT_PUBLIC_EMAILJS_PUBLIC_KEY=your_public_key
